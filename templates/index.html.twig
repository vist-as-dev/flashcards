<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
            <link href="{{ asset('assets/css/form.css') }}" rel="stylesheet"/>
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container">
                <form id="myForm" class="col s12">
                    <div class="row">
                        <div class="col m7 s12">
                            <div class="input-field">
                                <div class="textarea-container">
                                    <textarea id="sentences" class="materialize-textarea"></textarea>
                                </div>
                                <label for="myTextarea">Words</label>
                            </div>
                            <span class="badge row-counter">0</span>
                        </div>
                        <div class="col m5 s12">
                            <div class="row">
                                <div class="col s12">
                                    <span class="card-title">Direction</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col m6 s12">
                                    <div class="input-field">
                                        <select id="source"></select>
                                        <label for="source">Source language</label>
                                    </div>
                                </div>
                                <div class="col m6 s12">
                                    <div class="input-field">
                                        <select id="target"></select>
                                        <label for="target">Target language</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col m7 s12">
                                    <div class="row">
                                        <div class="col s12">
                                            <span class="card-title">Options</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12">
                                            <div class="switch">
                                                <label>
                                                    <input type="checkbox" id="definitions" checked />
                                                    <span class="lever"></span>
                                                    Definitions
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12">
                                            <div class="switch">
                                                <label>
                                                    <input type="checkbox" id="definition_examples" />
                                                    <span class="lever"></span>
                                                    Examples for Definition
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12">
                                            <div class="switch">
                                                <label>
                                                    <input type="checkbox" id="definition_synonyms" />
                                                    <span class="lever"></span>
                                                    Synonyms for Definition
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12">
                                            <div class="switch">
                                                <label>
                                                    <input type="checkbox" id="examples" />
                                                    <span class="lever"></span>
                                                    Examples
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col m5 s12">
                                    <div class="row">
                                        <div class="col s12">
                                            <span class="card-title">Output format</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12">
                                            <label>
                                                <input name="format" type="radio" value="reword" checked />
                                                <span>Reword (csv)</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12">
                                            <label>
                                                <input name="format" type="radio" value="anki" disabled />
                                                <span>Anki (csv)</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <button class="btn waves-effect waves-light" type="submit">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <div id="myResponse"></div>
                            <div id="myErrors"></div>
                        </div>
                    </div>
                </form>
            </div>
        {% endblock %}
    </body>
    <script src="{{ asset('assets/js/form-on-submit.js') }}"></script>
    <script src="{{ asset('assets/js/form-row-counter.js') }}"></script>
    <script src="{{ asset('assets/js/form-select.js') }}"></script>
</html>
